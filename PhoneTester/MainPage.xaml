<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhoneTester.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" IsVisible="false" x:Name="Loading">
                <ActivityIndicator IsVisible="true" WidthRequest="100" HeightRequest="100" IsRunning="True"/>
                <Label Text="Loading..." HorizontalOptions="Center"/>
            </VerticalStackLayout>
            <Button Text="Start" Clicked="Start_Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
